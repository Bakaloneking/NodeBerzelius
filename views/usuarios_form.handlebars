<div class="container">
    <div style="display: flex; justify-content: space-between; align-items: center;">
        <h1>Lista de Usuários</h1>
        <a href="/usuarios/novo" class="btn-add-new">Adicionar Novo Usuário</a>
    </div>
    <hr>
    {{#if usuarios.length}}
        <table class="dashboard-table">
            <thead>
            <tr>
                <th>Nome</th>
                <th>Email</th>
                <th>Cargo</th>
                <th>Ações</th>
            </tr>
            </thead>
            <tbody>
            {{#each usuarios}}
                <tr>
                    <td>{{this.usunome}}</td>
                    <td>{{this.usuemail}}</td>
                    <td>{{this.cargo.cargnome}}</td>
                    <td>
                        <a href="/usuarios/editar/{{this.usuid}}">Editar</a>
                        <form action="/usuarios/deletar/{{this.usuid}}" method="POST" style="display:inline;" onsubmit="return confirm('Tem certeza que deseja deletar este usuário?');">
                            <button type="submit" class="btn-delete">Deletar</button>
                        </form>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    {{else}}
        <p>Nenhum professor ou aluno encontrado.</p>
    {{/if}}
</div>

<style>
    /* Estilos para os botões da lista */
    .btn-add-new { background-color: #007bff; color: white; padding: 10px 15px; text-decoration: none; border-radius: 5px; }
    .btn-delete { background: none; border: none; color: red; cursor: pointer; text-decoration: underline; padding: 0; font-size: inherit; }
</style>