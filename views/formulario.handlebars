<section id="corpo">
    <div class="form-container">
        <h2>Agendamento de Nova Aula</h2>
        <form action="/add-aula" method="POST">

            <div class="form-group">
                <label for="cLab">Laboratório</label>
                <select name="tLab" id="cLab" required>
                    <option value="" disabled selected>Selecione um laboratório</option>
                    {{#each laboratorios}}
                        <option value="{{this.labid}}">{{this.labnome}}</option>
                    {{/each}}
                </select>
            </div>

            <div class="form-group">
                <label for="cProf">Professor</label>
                <select name="tProf" id="cProf" required>
                    <option value="" disabled selected>Selecione um professor</option>
                    {{#each professores}}
                        <option value="{{this.usuid}}">{{this.usunome}}</option>
                    {{/each}}
                </select>
            </div>

            <div class="form-group">
                <label for="cTur">Turma</label>
                <select name="tTur" id="cTur" required>
                    <option value="" disabled selected>Selecione uma turma</option>
                    {{#each turmas}}
                        <option value="{{this.turmid}}">{{this.turnome}}</option>
                    {{/each}}
                </select>
            </div>

            <div class="form-group">
                <label for="cTema">Tema da Aula</label>
                <textarea name="tTema" id="cTema" placeholder="Descreva o conteúdo da aula" required></textarea>
            </div>

            <div class="form-group">
                <label for="cData">Data</label>
                <select name="tData" id="cData" required>
                </select>
            </div>

            <div class="form-group">
                <label for="cHora">Hora</label>
                <select name="tHora" id="cHora" required>
                    <option value="" disabled selected>Selecione um horário</option>
                    <option value="08:30 - 09:10">08:30 - 09:10</option>
                    <option value="09:10 - 10:00">09:10 - 10:00</option>
                    <option value="10:20 - 11:10">10:20 - 11:10</option>
                </select>
            </div>

            <div class="form-group">
                <button type="submit">Cadastrar Aula</button>
            </div>
        </form>
    </div>
</section>